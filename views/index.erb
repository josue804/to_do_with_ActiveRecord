<h1>Add a New List</h1>

<form action="/" method="post">
  <div class="form-group">
    <label for="list">List Name</label>
    <input class="form-control" type="text" name="list" placeholder="e.g. Cat">
  </div>

  <button class="btn btn-primary btn-md" type="submit">Submit</button>
</form>

<ul>
<% @lists.each do |list| %>
  <li><a href="/list/<%= list.id %>"><%= list.name %></a></li>
<% end %>
</ul>
